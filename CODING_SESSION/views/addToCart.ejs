      <h3 class="container header">MY CART</h3>

      <%if(listProduct && listProduct.length>0){%>
      <div class="container">


        <%listProduct.forEach(product=>{%>
        <div class="col-md-3 col-sm-6">
          <div class="product-grid">
            <div class="product-image">
              <a href="">
                <img class="pic-1" src="<%=product.image1%>" alt="">
                <img class="pic-2" src="<%=product.image2%>" alt="">
              </a>
            </div>
          </div>
          <div class="col-md-6">
            <div class="product-content">
              <a href="/productInfo/<%=product.name%>"><%=product.name%></a>
              <div class=" price"><%=product.price%></div>
            </div>
          </div>

        </div>
        <%})%>

        <%}%>


      </div>



